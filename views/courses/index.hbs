{{#extend "layout"}}

{{#content "main" mode="prepend"}}
      <div class="main-header">
            <div class="mobile-toggle" id="mobile-toggle">
             <i class="bx bx-menu-alt-right"></i>
            </div>
            <div class="main-title">
                Category List
            </div>
        </div>

        <div class="col-12" style="margin-top: 15px;">
            <!--  TABLE -->
            <div class="box">
                <div class="box-header">
                 List
                </div>
                <div class="box-body overflow-scroll">
                    <table>
                        <thead>
                            <tr>
                                <th>Courser ID</th>
                                <th>Course Name</th>
                                <th>Course Description</th>
                                <th>Category</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        {{#each courses}}
                            <tr>
                                <td>{{id}}</td>
                                <td>
                                    <div class="name-owner">
                                        <span> {{course_name}}</span>
                                    </div>
                                </td>
                                 <td>
                                    <span class="slot name-shipped">
                                        {{course_description}}
                                    </span>
                                </td>
                                <td>
                                    <span class="slot name-shipped">
                                        {{category.category_name}}
                                    </span>
                                </td>

                                <td class="text-right">
                                    <div class="actions">
                                        <a href="/course/detail?id={{id}}">
                                            <i class='las la-eye' ></i>
                                        </a>
                                        <a href="/course/update?id={{id}}">
                                            <i class='bx bxs-edit'></i>
                                        </a>
                                        <a href="/course/delete?id={{id}}">
                                            <i class='bx bxs-trash' ></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END TABLE -->
        </div>


{{/content}}

{{/extend}}

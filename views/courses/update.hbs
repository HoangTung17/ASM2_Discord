{{#extend "layout"}}

{{#content "main" mode="prepend"}}


{{/content}}


{{#content "header" mode="prepend"}}
    <link rel="stylesheet" href="/css/students.css">
{{/content}}

{{#content "main" mode="prepend"}}
<div class="main-header">
    <div class="mobile-toggle" id="mobile-toggle">
        <i class="bx bx-menu-alt-right"></i>
    </div>
    <div class="main-title">
        Add Course
    </div>
</div>

<div class="col-12" style="margin-top: 15px;">
    <!--  TABLE -->
    <div class="box">
        <div class="box-header">
            Add
        </div>
        <div class="box-body overflow-scroll">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-body">
                        <form method="POST" action="/course/create">
                            <div class="row">
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>Name</label>
                                            <input type="text" name="course_name" class="form-control" value="{{course.course_name}}">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>Course Description</label>
                                            <textarea name="course_description" class="form-control">{{course.course_description}}</textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>Category ID</label>
                                            <select class="form-control" name="category_id" class="trainee_id">
                                                <option >Select </option>
                                                {{#each categories}}
                                                    <option {{selected ../course.category_id id}} value="{{id}}"> {{category_name}}</option>
                                                {{/each}}
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>



    <!-- END  TABLE -->
</div>
{{/content}}

{{/extend}}

{{#extend "layout" mode="prepend"}}

    {{#content "header" mode="prepend"}}
        <link rel="stylesheet" href="/css/students.css">
    {{/content}}

    {{#content "main" mode="prepend"}}
         <div class="main-header">
            <div class="mobile-toggle" id="mobile-toggle">
             <i class="bx bx-menu-alt-right"></i>
            </div>
            <div class="main-title">
                Teacher List
            </div>
        </div>

        <div class="col-12" style="margin-top: 15px;">
            <!--  TABLE -->
            <div class="box">
                <div class="box-header">
                </div>
                <div>
            <a href="/trainer/export" class="btn-1">Export Trainer's List</a>
        </div>
                <div class="box-body overflow-scroll">
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Teacher Name</th>
                                <th>BoD</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>Avatar</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each trainers}}
                            <tr>
                                <td>{{id}}</td>
                                <td>
                                    <div class="name-owner">
                                        <span>{{name}}</span>
                                    </div>
                                </td>
                                <td>17/11/2000</td>
                                <td>
                                    <span class="slot name-shipped">
                                        {{email}}
                                    </span>
                                </td>
                                <td>
                                    <div class="teach-status teach-paid">
                                        <div class="dot"></div>
                                        <span>{{phone}}</span>
                                    </div>
                                </td>
                                <td>Ha Noi</td>
                                <td>
                                    <img src="/uploads/trainers/{{avatar}}" width="150px" alt="">
                                </td>
                                <td class="text-right">
                                    <div class="actions">
                                        <a href="/trainer/detail?id={{id}}">
                                            <i class='las la-eye' ></i>
                                        </a>
                                        <a href="/trainer/update?id={{id}}">
                                            <i class='bx bxs-edit'></i>
                                        </a>
                                        <a href="/trainer/delete?id={{id}}">
                                            <i class='bx bxs-trash' ></i>
                                        </a>
                                    </div>
                                </td>
                                {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END  TABLE -->
        </div>
    {{/content}}
{{/extend}}

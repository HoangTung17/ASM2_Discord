{{#extend "layout"}}
{{#content "header" mode="prepend"}}
<link rel="stylesheet" href="/css/students.css">

{{/content}}


{{#content "main" mode="prepend"}}
<div class="main-header">
    <div class="mobile-toggle" id="mobile-toggle">
        <i class="bx bx-menu-alt-right"></i>
    </div>
    <div class="main-title">
        Add Category
    </div>
</div>

<div class="col-12" style="margin-top: 15px;">
    <!--  TABLE -->
    <div class="box">
        <div class="box-header">
            Update
        </div>
        <div class="box-body overflow-scroll">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card-body">
                        <form method="POST" action="/category/update">
                            <div class="row">
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>Category ID</label>
                                            <input type="text" name="id" class="form-control" value="{{category.id}}">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>Category Name</label>
                                            <input type="text" name="category_name" value="{{category.category_name}}" class="form-control">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <label>Category Detail</label>
                                            <textarea class="form-control" name="category_description">{{category.category_description}}</textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- END  TABLE -->
</div>
{{/content}}

{{/extend}}
